{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A simple radial chart with embedded data.",
  "width": 420,
  "height": 350,
  "data": {
    "url": "https://raw.githubusercontent.com/chrislou415/data/main/Top10%20Population.csv"
  },
  "transform": [
    {
      "calculate": "datum.Deaths/datum.Historical_Population*1000000",
      "as": "Road Deaths per Million Population"
    },
    {
      "calculate": "datum.Deaths/datum.Historical_Population*100",
      "as": "Mortality Rate"
    }
  ],
  "layer": [
    {"mark": {"type": "arc", "innerRadius": 30, "stroke": "#fff"}},
    {"mark": {"type": "text", "radiusOffset": 15}}
  ],
  "encoding": {
    "text": {"field": "Code", "type": "nominal"},
    "theta": {
      "field": "Mortality Rate",
      "type": "quantitative",
      "stack": true
    },
    "radius": {
      "field": "Mortality Rate",
      "scale": {"type": "sqrt", "zero": true, "rangeMin": 20}
    },
    "color": {
      "field": "Entity",
      "type": "nominal",
      "title": "Country Name",
      "scale": {
        "domain": [
          "China",
          "India",
          "United States",
          "Indonesia",
          "Pakistan",
          "Brazil",
          "Nigeria",
          "Bangladesh",
          "Russia",
          "Mexico"
        ],
        "range": [
          "#C85454",
          "#A9C854",
          "#7E57C2",
          "#C854B4",
          "#32784b",
          "#CCFF00",
          "#996633",
          "#99FFCC ",
          "#54C8AE",
          "#324c78"
        ]
      }
    },
    "tooltip": [
      {"field": "Entity", "type": "nominal", "title": "Country"},
      {
        "field": "Road Deaths per Million Population",
        "type": "quantitative",
        "format": ".0f",
        "title": "Road Deaths per 1000,000"
      },
      {"field": "Deaths", "type": "quantitative", "format": ","},
      {"field": "Mortality Rate", "type": "quantitative", "format": ".4f","title":"Mortality Rate(%)"},
      {
        "field": "Historical_Population",
        "type": "quantitative",
        "title": "Population",
        "format": ","
      }
    ]
  }
}